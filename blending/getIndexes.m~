function indexes = getIndexes(mask, targetH, targetW, offsetX, offsetY)

    % initialize matrix size
    indexes = zeros(targetH, targetH);

    mask2 = padarray(mask,[offsetX, offsetY],'pre');
    
    [row col] = size(mask);
    
    mask3 = padarray(mask,[targetH-row,targetW-col],'post');

    ind = find(mask3);
    
    for i=2:length(ind)
       indexes(ind(i)) =  mask3(ind(i)) + mask(ind(i-1));
    end
end